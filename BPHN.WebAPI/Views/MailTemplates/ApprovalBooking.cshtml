@using BPHN.ModelLayer.ViewModels;
@model MailApprovalBookingVm;
<html>

<head>
    <meta name="viewport" content="width=device-width">
    <title></title>
    <style>
    </style>
</head>

<body style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
    <div style="border: 1px solid #000;">
        <h1 style="text-align: center; font-weight: 700; text-transform: uppercase;">Phê duyệt thông tin đặt sân</h1>
        <div style="padding: 20px;">
            <p>Gửi anh/chị <span style="font-weight: 700;">@Model.PhoneNumber</span>,</p>
            <p>Chúng tôi chấp nhận yêu cầu đặt sân từ anh/chị <span style="font-weight: 700;">@Model.PhoneNumber</span></p>
            <p style="font-weight: 700;">Thông tin đặt sân</p>
            <div style="display: flex; flex-direction: row;">
                <p style="width: 150px; font-weight: 700;">Tên sân:</p>
                <p>@Model.StadiumName - @Model.NameDetail</p>
            </div>
            <div style="display: flex; flex-direction: row;">
                <p style="width: 150px; font-weight: 700;">Ngày đặt:</p>
                <p>@Model.BookingDate</p>
            </div>
            <div style="display: flex; flex-direction: row;">
                <p style="width: 150px; font-weight: 700;">Ngày diễn ra:</p>
                <p>@Model.MatchDate</p>
            </div>
            <div style="display: flex; flex-direction: row;">
                <p style="width: 150px; font-weight: 700;">Khung giờ:</p>
                <p>@Model.TimeFrameInfo</p>
            </div>
            <div style="display: flex; flex-direction: row;">
                <p style="width: 150px; font-weight: 700;">Giá sân:</p>
                <p>@Model.Price</p>
            </div>
        </div>
    </div>
</body>

</html>